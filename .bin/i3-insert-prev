#!/bin/bash

# used like this:
# i3-msg workspace $(i3-insert-prev)
# or like this:
# i3-msg move container to workspace $(i3-insert-prev)

focusedws=$(i3-msg -t get_workspaces | jq -r '.[] | select(.focused == true).name')
screen=${focusedws:0:1}
number=${focusedws:1}

i3-cascade-down ${screen} $(($number - 1))

echo ${screen}$(($number - 1))
